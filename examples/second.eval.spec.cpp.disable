#include "cspec.hpp"

Eval(spec3)
{
    Describe("A second spec", [] {
        It("Fails so I can see the output", [] {
            auto a = "foo";
            auto b = "bar";

            std::cout << __LINE__ << std::endl;
            Expect(a).toEqual(b);
            std::cout << __LINE__ << std::endl;
            Expect(b).toEqual(a);
            std::cout << __LINE__ << std::endl;
        });

        std::cout << __LINE__ << std::endl;
        Expect("this should trigger a InvalidExpectationException").toEqual("");
        std::cout << __LINE__ << std::endl;
    });
}
